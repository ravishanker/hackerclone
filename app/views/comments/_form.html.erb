<h2>New Comment</h2>

<%= form_for [ @commentable, Comment.new ] do |f| %>

  <div class="field">
    <%= debug @commentable %><br />

  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :rows => 5 %>
  </div>

  <div class="actions">
    <%= f.submit "Add Comment" %>
  </div>
<% end %>